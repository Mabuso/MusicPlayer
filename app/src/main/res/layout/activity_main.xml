<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/download4"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mbuso.musicplayer.MainActivity">

    <LinearLayout
       android:layout_centerInParent="true"
        android:background="@color/colorBackground"
        android:layout_width="400dp"
        android:layout_height="360dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout">
      <android.support.v7.widget.CardView
          android:id="@+id/card_view"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:elevation="2dp"
          app:theme="@style/Base.CardView"
          app:cardElevation="@dimen/cardview_default_elevation"
          app:cardBackgroundColor="@color/colorPrimaryDark"
          app:cardCornerRadius="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:weightSum="1">
           <ImageView
               android:layout_width="match_parent"
               android:elevation="5dp"
               android:layout_height="10dp"
               android:layout_weight="0.57" />
            <android.support.design.widget.TextInputLayout
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:elevation="4dp"
                android:layout_marginTop="10dp"
                android:layout_height="40dp"
                android:id="@+id/UserNameLayout"
                app:hintTextAppearance="@style/TextAppearance.Design.Hint"
                android:layout_weight="0.20">
                <android.support.design.widget.TextInputEditText

                    android:layout_width="match_parent"
                    android:background="@color/colorAccent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:layout_weight="0.16"
                    android:hint="@string/UserNameHint"
                    android:id="@+id/UserNameView"
                    android:clickable="true"
                    android:elegantTextHeight="true"
                    android:textSize="18dp"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:enabled="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:background="@color/colorAccent"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:elevation="4dp"
                android:id="@+id/PasswordLayout"
                app:hintTextAppearance="@style/TextAppearance.Design.Hint"
                android:layout_weight="0.20">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorAccent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:hint="@string/PasswordHint"
                    android:clickable="true"
                    android:elegantTextHeight="true"
                    android:enabled="true"
                    android:textSize="18dp"
                    android:id="@+id/PasswordView" >

                </android.support.design.widget.TextInputEditText>

            </android.support.design.widget.TextInputLayout>


            <Button
                android:layout_width="205dp"
                android:background="@color/colorButton"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:text="LOGIN"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.Button"
                android:textSize="@dimen/abc_text_size_button_material"
                android:textStyle="bold"
                android:id="@+id/btnLogin" />
        </LinearLayout>

      </android.support.v7.widget.CardView>

    </LinearLayout>



</RelativeLayout>
